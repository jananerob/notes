<h1>Items</h1>

<%= link_to 'New Item', new_item_path %> 

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Expected Cost</th>
            <th>Done?</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        <% @items.each do |item| %>
            <tr>
                <td><%= item.id %></td>
                <td><%= link_to item.title, item_path(id: item.id) %></td>
                <td><%= item.expected_cost %></td>
                <td><%= item.is_done %></td>
                <td><%= link_to 'Edit', edit_item_path(id: item.id) %></td>
                <td>
                    <%= button_to 'Delete', item, method: :delete %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>
