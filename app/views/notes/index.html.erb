<h1>Notes</h1>

<%= link_to 'New Note', new_note_path %> 

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Body</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @notes.each do |note| %>
            <tr>
                <td><%= note.id %></td>
                <td><%= link_to note.name, note_path(id: note.id) %></td>
                <td><%= note.body %></td> 
                <td><%= link_to 'Edit', edit_note_path(id: note.id) %></td> 
            </tr>
        <% end %>
    </tbody>
</table>
